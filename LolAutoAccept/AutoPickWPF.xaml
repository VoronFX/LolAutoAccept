<Window x:Class="LolAutoAccept.AutoPickWPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LolAutoAccept"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance Type=local:AutoPickModel}">
    <DockPanel Margin="5">
            <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
            <CheckBox IsChecked="{Binding PostChatMessage}"><Label Content="Post message in chat"/></CheckBox>
                <TextBox Text="{Binding Message}"/>
            </StackPanel>
        <Grid>
            <ListView >
                <ListViewItem>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox></ComboBox>
                        <ComboBox></ComboBox>
                        <ComboBox></ComboBox>
                        <ComboBox></ComboBox>
                        <Button></Button>
                        <Button></Button>
                        <Button></Button>
                    </StackPanel>
                </ListViewItem>
            </ListView>
        </Grid>
    </DockPanel>
</Window>
